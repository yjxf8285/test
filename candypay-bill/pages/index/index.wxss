
page{
    background-color: #e9e9e9;
}
.arc-bg-shape {
    position: relative;
    width: 100%;
    height: 240rpx;
    display: block;
}
.arc-bg-shape::after{
    width: 140%;
    display: block;
    height: 240rpx;
    position: absolute;
    left: -20%;
    top: 0;
    content: '';
    /* border-radius: 0 0 50% 50%; */
    background:#F0454F;
}

.index-body {
   
    margin: 0 20rpx;
}
.block-section {
    padding: 10rpx 20rpx;
    overflow: hidden;
    background-color: #fff;
    margin-bottom: 20rpx;
    box-shadow: 0 9rpx 18rpx 0 rgba(218, 218, 218, 0.5);
    border-radius: 10rpx;
}
.mainmenu-wrap {
    display: flex;
    flex-wrap: wrap;
}
.mainmenu-item {
    margin: 20rpx 0;
    width: 33%;
    text-align: center;
}
.mainmenu-icon {
    width: 60rpx;
    height: 60rpx;
}
.mainmenu-text {
    color: #333;
    font-size: 30rpx;
}
.panel-left {
    float: left;
    text-align: center;
    padding: 38rpx;
}
.panel-title {
    margin-bottom: 24rpx;
    font-size: 40rpx;
    font-weight: 500;
    color: rgba(51, 51, 51, 1);
}
.decorate-icon {
    width: 184rpx;
    height: 180rpx;
}
