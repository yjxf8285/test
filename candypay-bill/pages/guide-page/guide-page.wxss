.page-con {
    background-color: #fff;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.pic {
    width: 100%;
    margin-top: 184rpx;
}
.txt-content {
    position: absolute;
    top: 850rpx;
    text-align: center;
    width: 100%;
}
.txt-content .title {
    font-size: 36rpx;
    font-weight: 500;
    color: #333;
}
.txt-content .description {
    font-size: 30rpx;
    color: #959595;
    margin-top: 10rpx;
}
.indicate-bar {
    position: absolute;
    top: 1090rpx;
    width: 100%;
    display: flex;
    justify-content: center;
}
.indecate-point {
    background: #d0d0d0;
    border-radius: 8rpx;
    width: 30rpx;
    height: 6rpx;
    margin: 6rpx;
}
.indecate-point.cur {
    background: #fb4c4c;
}
.authorization-btn {
    position: absolute;
    left: 0;
    right: 0;
    top: 1060rpx;
    width: 400rpx;
    height: 70rpx;
    line-height:70rpx;
    color: #fff;
    font-size: 34rpx;
    background-image: linear-gradient(-224deg, #ec686d 0%, #eb3c46 100%);
    box-shadow: 0 6px 12rpx 0 rgba(255, 67, 67, 0.5);
    border-radius: 40rpx;
}
