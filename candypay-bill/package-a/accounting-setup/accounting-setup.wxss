.con{
    height: 100%;
    background:#fff;
    flex-direction: column;
}
.con .h2{
    font-size: 32rpx;
    margin: 20rpx 40rpx;
}
.con .h2 .icon{ 
    width: 10rpx;
    height: 26rpx;
    background:  rgba(255, 0, 0, 1);
    display: inline-block;
    vertical-align: middle;
}
.con .h2 .t{ 
    display: inline-block;
    vertical-align: middle;
    margin-left: 10rpx;
    color:#000;
}

/***************************/
.selected-vendor-info{
    margin: -10rpx  80rpx 0 80rpx;
}
.selected-vendor-info.def{
    margin:30rpx 40rpx ;
}
.selected-vendor-info .vendor-name{
    font-size: 36rpx;
    color:#000;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.selected-vendor-info .describing{
    font-size: 22rpx;
    color:#999;
}
.selected-vendor-info .green{
    color: #339900;
}
/***************************/
.tab-btn-list{
    display: flex;
    padding-bottom:16rpx;
    border-bottom: solid 4rpx #ccc;
}
.tab-btn-list.default{
    color:#999;
    border-bottom: solid 4rpx #999;
}
.tab-btn-list.speed{
    border-bottom: solid 4rpx #329901;
}
.tab-btn-list .tab-btn{
    width: 200rpx;
    color:#ccc;
    border: solid 1px #ccc;
    border-radius: 6rpx;
    margin-right: 20rpx;
}
.tab-btn-list.default .cur{
    color:#999;
    border-color: #999;
}
.tab-btn-list.speed .cur{
    color:#329901;
    border-color:  #329901;
}
.tab-btn-list .tab-btn .top{
    display: flex;
}
.tab-btn-list .tab-btn .fa{
    font-size: 40rpx;
    width: 74rpx;
    height: 66rpx;
    text-align: center;
    line-height:66rpx;
}
.tab-btn-list .tab-btn .txt{
    font-size: 18rpx;
    height: 66rpx;
    line-height:24rpx;
    text-align:right;
    padding-top: 10rpx;
    box-sizing: border-box;
}
.tab-btn-list .tab-btn .bottom{
   background: #ccc;
   height: 36rpx;
   line-height: 36rpx;
   text-align: center;
   font-size: 26rpx;
   color: #fff;
}
.tab-btn-list.default .cur .bottom{
    background: #999;
}
.tab-btn-list.speed .cur .bottom{
    background: #329901;
}
/***************************/
.main-info{
    height: 290rpx;
}
.tab-item-list{
    position:absolute;
    top:510rpx;
    bottom:0;
    left:0;
    right:0;
    background: #fff;
}
.tab-item-list .top-box{
    color: #999;
    font-size: 32rpx;
    padding:40rpx;
    height: 312rpx;
    box-sizing: border-box;
    border-bottom:solid 1px #d7d7d7;
}
.tab-item-list .content-wrap{
    padding-top: 10rpx;
    box-sizing: border-box;
    height: 100%;
}
.tab-item-list .swiper-item-con{
    position:absolute;
    top:0;
    bottom:90rpx;
    left:0;
    right:0;
}
/***************************/
.save-btn{
    position: fixed;
    bottom:0;
    left:0;
    right:0;
    background: #ff6666;
    height: 90rpx;
    text-align: center;
    line-height: 90rpx;
    color: #fff;
}
.save-btn.disabled{
    background-color: #ccc;
    box-shadow:0 0 30rpx #ccc;
}