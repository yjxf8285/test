.arc-bg-shape {
    position: relative;
    width: 100%;
    height: 240rpx;
    display: block;
}
.arc-bg-shape::after{
    width: 140%;
    display: block;
    height: 240rpx;
    position: absolute;
    left: -20%;
    top: 0;
    content: '';
    /* border-radius: 0 0 50% 50%; */
    background:#F0454F;
}