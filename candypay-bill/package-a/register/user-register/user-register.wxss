.linearlayout {
    padding-top: 36rpx;
    background: #ffffff;
    display: flex;
    min-height: 100vh;
    text-align: center;
    flex-flow: column nowrap;
    justify-content: space-between;
}

.section-area {
    display: flex;
    height: 90rpx;
    margin: 50rpx 65rpx 0rpx 65rpx;
    border: solid 1px #d0d0d0;
    border-radius: 45rpx 45rpx 45rpx 45rpx;
    text-align: center;
    flex-flow: row nowrap;
    justify-content: start;
    align-items: center;
}

.section-area .icon-image {
    margin-left: 40rpx;
    width: 54rpx;
    height: 54rpx;
}
.section-area input {
    margin-left: 20rpx;
    text-align: left;
    color: #999;
    font-size: 32rpx;
    max-width: 300rpx;
}

.section-area .text-btn {
    text-align: center;
    color: #e45451;
    font-size: 32rpx;
    padding: 0rpx;
    background-color: #fff;
}
.section-area .text-btn::after {
    border: none;
}
.section-area .split {
    height: 70rpx;
    width: 1px;
    background-color: #e45451;
}
.next-btn {
    margin: 50rpx 65rpx 0rpx 65rpx;
    width: 620rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
}
.bottmom-area {
    display: flex;
    justify-content: flex-end;
    flex-flow: column nowrap;
}
.bg-image {
    width: 750rpx;
    height: 212rpx;
}
.agreement-section {
    display: flex;
    align-items: center;
    margin: 20rpx 65rpx 0rpx 65rpx;
    color: #333;
    text-align: left;
    font-size: 28rpx;
}
.agreement-icon {
    margin-right: 12rpx;
    border-radius: 100%;
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
    border: 2px solid #eb464e;
}
.agree-cion {
    width: 34rpx;
    height: 34rpx;
    margin-right: 10rpx;
}
