.card-list-bar {
    background: #fff;
    box-shadow: 0 9rpx 18rpx 0 rgba(218, 218, 218, 0.5);
}
.card-list-bar .filters-bar {
    height: 90rpx;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    border-top: solid 1px #eaeaea;
}
.card-list-bar .filters-bar-item {
    font-size: 26rpx;
    height: 40rpx;
    border-right: solid 1px rgba(255, 255, 255, 0.4);
    padding: 0 20rpx;
    box-sizing: border-box;
}
.card-list-wrap {
    position: absolute;
    top: 200rpx;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0 20rpx;
}
.card-list-wrap .list-header {
    height: 130rpx;
    padding: 0 20rpx;
}
.card-list-wrap .list-header .img-wrap {
    width: 90rpx;
    height: 90rpx;
    background: #f5f5f5;
    border: 1px solid #e0e0e0;
    border-radius: 10rpx;
}
.card-list-wrap .card-product-brand {
    font-size: 20rpx;
    border: 1px solid #eb464e;
    color: #eb464e;
    border-radius: 0 10rpx 0 10rpx;
    padding: 0 10rpx;
    height: 30rpx;
    line-height: 30rpx;
}
.add-card-btn {
    position: absolute;
   
    top:50%;
    right:0;
    left:auto;
}
