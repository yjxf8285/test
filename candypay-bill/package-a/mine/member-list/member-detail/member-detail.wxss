@import "/style/com-list";
@import "../../card/card.wxss";
.pos-area{
    margin-left: 40rpx;
}
.vendor-name{
    margin-bottom: 10rpx;
}

.editLabelWrap{
    box-sizing: border-box;
    padding:40rpx;
    height: 500rpx;
    top:50%;
    left: 20rpx;
    right:20rpx;
    margin-top: -230rpx;
    position: absolute;
    background: #fff;
    border-radius: 12rpx;
    z-index: 99;
    border: solid 1px #ccc;
    box-shadow: 5px 5px 30rpx #ccc;
}
.editLabelWrap .title{
    font-size: 40rpx;
    text-align: center;
    border-bottom: solid 1px #f2f2f2;
    padding-bottom: 20rpx;
}
.editLabelWrap .fn-wrap{

    text-align: center;
}
.editLabelWrap .fn-wrap .cancel{
    margin-left: 30rpx;
}
.editLabelWrap .txt{
    color:#666;
}
.editLabelWrap .editLabelInput{
    padding: 0 20rpx;
    height: 80rpx;
    margin: 20rpx 0;
    border: solid 1px #ccc;
}
.card-section{
    margin-top: 30rpx;
    width: 100%;
    background: #ffffff;
}
.cell{
    height: 80rpx;
    padding: 0rpx 40rpx 0rpx 40rpx;
}

.horizontal-layout{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
}

.horizontal-layout .cell-value{
    font-size: 32rpx;
    margin-left: 20rpx;
    color: #999999;
    width: 450rpx;
    text-align: right;
}
.horizontal-layout .cell-name{
    color: #333333;

}
.split-view{
    height: 1px;
    background-color:#e0e0e0;
    width: 100%; 
}

.cell-value{
    line-height: 34rpx;
    overflow: hidden;
    max-height: 68rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-width: 450rpx;
    width: 450rpx;
}