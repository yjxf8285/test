/* 有具体宽度 */
.text-overflow-width {
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap !important;
}
/* 自适应宽度 */
.text-overflow-nowidth {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
/* 2行文字截取 */
.text-overflow-double {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
