

/* 通用模态框样式*/

.com-modal .com-modal-tit {
    color: #ff8b46;
    font-size: 30rpx;
    font-weight: bold;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx dashed #c6c6c6;
}
.com-modal .com-modal-body {
    padding: 30rpx;
    font-size: 30rpx;
    color: #333;
    line-height: 50rpx;
}
.com-modal .com-modal-footer {
    color: #eb464e;
    font-size: 30rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-top: 1rpx dashed #c6c6c6;
}
.com-modal .icon {
    width: 12rpx;
    height: 12rpx;
    display: inline-block;
    border-radius:100%;
    vertical-align: middle;
    background-image: linear-gradient(-134deg, #ec686d 0%, #eb3c46 100%);
}
