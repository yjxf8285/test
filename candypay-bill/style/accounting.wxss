/* 记账页面公用样式 */
.device-accounting-header {
    height: 120rpx;
    background: #fff;
    margin-top: 1px;
    padding: 0 20rpx;
    color: #333;
    font-size: 34rpx;
    font-weight: bold;
}
.card-accounting-header {
    height: 140rpx;
    line-height: 60rpx;
    background: #fff;
    margin-top: 1px;
    padding: 0 20rpx;
    color: #333;
    font-size: 34rpx;
}
.available-merchant-info {
    height: 160rpx;
    position: relative;
    color: #333;
    font-size: 34rpx;
    padding: 10rpx 20rpx 0 20rpx;
    box-sizing: border-box;
    margin: 20rpx;
    background: #fff;
    box-shadow: 0 9rpx 18rpx 0 rgba(218, 218, 218, 0.5);
    border-radius: 10rpx;
    overflow: hidden;
}
.available-merchant-info .l {
    height: 150rpx;
    margin-right: 130rpx;
}
.available-merchant-info .vendorname-wrap {
    position: absolute;
    left: 20rpx;
    top:0;
    height: 100rpx;
    width: 510rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
}
.available-merchant-info .tag-btn-wrap {
    position: absolute;
    left: 20rpx;
    bottom: 20rpx;
}

.available-merchant-info .r {
    float: right;
    width: 130rpx;
}
.accounting-body {
    position: absolute;
    top: 340rpx;
    right: 20rpx;
    bottom: 0;
    left: 20rpx;
}
.accounting-body .vendor-wrap {
    background: #ffffff;
    box-shadow: 0 9rpx 18rpx 0 rgba(218, 218, 218, 0.5);
    border-radius: 0 0 10rpx 10rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 130rpx;
}
.vendor-list-title {
    border-bottom: solid 1px #f3f3f3;
    height: 90rpx;
    margin: 0 20rpx;
    background: #ffffff;
    border-radius: 10rpx 10rpx 0 0;
}
.card-acc-tab-title {
    display: flex;
    align-items: flex-end;
}
.card-acc-tab-title .s {
    background-color: #fff;
    border-radius: 10rpx 10rpx 0 0;
    height: 90rpx;
}
.card-acc-tab-title .m {
    background: #e0e0e0;
    border-radius: 0 10rpx 0 10rpx;
    height: 70rpx;
}
.card-acc-tab-title-bottom {
    background-color: #fff;
    height: 20rpx;
}
.save-btn {
    text-align: center;
    position: absolute;
    bottom: 30rpx;
    left: 50%;
    margin-left: -200rpx;
    font-size: 34rpx;
    color: #ffffff;
    width: 400rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-image: linear-gradient(-224deg, #ec686d 0%, #eb3c46 100%);
    box-shadow: 0 6px 12rpx 0 rgba(255, 67, 67, 0.5);
    border-radius: 40rpx;
}
.save-btn.disabled {
    background-color: #ccc;
    background-image: none;
    box-shadow: 0 6px 12rpx 0 rgba(0, 0, 0, 0.1);
}
