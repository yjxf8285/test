
/* card */
.com-card {
    background: #ffffff;
    box-shadow: 0 9px 18rpx 0 rgba(218, 218, 218, 0.5);
    border-radius: 10rpx;
    box-sizing: border-box;
}
.com-border-shadow {
    background: #ffffff;
    box-shadow: 0 -4px 8px 0 rgba(218, 218, 218, 0.5), 0 4px 8px 0 rgba(218, 218, 218, 0.5);
    border-radius: 10rpx;
}
.com-card-header {
    display: flex;
    height: 70rpx;
    align-items: center;
    padding: 0 20rpx;
    font-size: 30rpx;
}
.com-card-header-icon {
    background-image: linear-gradient(-134deg, #ec686d 0%, #eb3c46 100%);
    border-radius: 3.5px;
    width: 6rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.com-shadow {
    box-shadow: 0 9px 18rpx 0 rgba(218, 218, 218, 0.5);
}
.com-border-top {
    border-top: 1px dashed #cbcbcb;
}
.com-border-bottom {
    border-bottom: 1px dashed #cbcbcb;
}

.list-no-data {
    text-align: center;
    color: #999;
}