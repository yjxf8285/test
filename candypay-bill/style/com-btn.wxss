/* button */
.submit-button-wrap{
    text-align: center;
}
.btn-primary {
    display: inline-block;
    border-radius: 100rpx;
    text-align: center;
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 24rpx;
    color: #ffffff;
    background-image: linear-gradient(-224deg, #ec686d 0%, #eb3c46 100%);
    box-shadow: 0 6px 14rpx 0 rgba(255, 67, 67, 0.5);
}
.btn-primary.disabled {
    background: #d8d8d8;
    box-shadow: none;
}
.btn-primary[disabled]{
    background: #d8d8d8;
    box-shadow: none;
}
.btn-primary[disabled]::after{
    border: none;
}
.btn-primary.big {
    font-size: 32rpx;
    width: 520rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: auto;
    margin-right: auto;
}
.btn-normal {
    display: inline-block;
    border-radius: 100rpx;
    text-align: center;
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 24rpx;
    color: #F0454F;
    background: #e9e9e9;
    border: solid 1rpx #F0454F;
}
.btn-normal.big {
    font-size: 32rpx;
    width: 520rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: auto;
    margin-right: auto;
}
.btn-mini {
    font-size: 22rpx;
    color: #999;
    width: 140rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border: 1rpx solid #e0e0e0;
    border-radius: 4rpx;
}
.btn-primary.noshadow {
    box-shadow: none;
}
.submit-button-wrap {
    margin-top: 130rpx;
}