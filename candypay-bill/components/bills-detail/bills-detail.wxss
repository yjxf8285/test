.transaction-statistics-detail .filters-bar {
    height: 85rpx;
    background-image: linear-gradient(-225deg, #fb5e5e 0%, #f0454f 100%);
    font-size: 30rpx;
    color: #ffffff;
    display: flex;
    align-items: center;
}
.transaction-statistics-detail .filters-bar-item {
    width: 200rpx;
    font-size: 26rpx;
    color: #ffffff;
    height: 40rpx;
    border-right: solid 1px rgba(255, 255, 255, 0.4);
    padding: 0 20rpx;
    box-sizing: border-box;
}
.transaction-statistics-detail .list-wrap {
    padding: 20rpx;
}
.device-transaction-list-item {
    position: relative;
}
.device-transaction-list-item .ysf-icon{
    position: absolute;
    top:18rpx;
    right:0;
}
.device-transaction-list-item .list-header {
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
    border-bottom: dashed 1px #c6c6c6;
    font-size: 30rpx;
    color: #333;
}
.device-transaction-list-item .list-header .l {
    max-width: 222rpx;
}

.device-transaction-list-item .list-body {
    padding: 10rpx 20rpx;
}

.device-transaction-list-item .list-body .l .merchant-name {
    font-size: 34rpx;
    color: #333333;
    font-weight: bold;
    margin: 10rpx 0;
    max-width: 450rpx;
}
.device-transaction-list-item .list-body .r {
    min-width: 160rpx;
}
.device-transaction-list-item .list-body .time-str {
    font-size: 28rpx;
    color: #999999;
    margin-top: 10rpx;
}
.device-transaction-list-item .list-body .typename {
    font-size: 26rpx;
    color: #959595;
}
.device-transaction-list-item .list-body .amountstr {
    font-size: 34rpx;
    
}
.device-transaction-list-item .mcc-tag-btn-wrap{
    height: 50rpx;
    line-height: 50rpx;
    position: relative;
} 

