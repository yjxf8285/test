.mask{
    background: #000;
    opacity: 0;
    position: fixed;
    top:0;
    bottom: 0;
    left:0;
    right:0;
    z-index: 999;
}
.pad{
    box-shadow:0 0 30rpx #ccc;
    background: #fff;
    position: fixed;
    height: 0;
    bottom: 0;
    left:0;
    right:0;
    transition: height 100ms;
    z-index: 999;
}
.pad.show{
    height: 550rpx;
   
}
.top{
    display: flex;
    justify-content: space-between;
    height: 100rpx;
    line-height: 100rpx;
    text-align: right;
    padding-right:40rpx; 
}
.con{
    display: flex;
    flex-wrap: wrap;
    align-items:flex-start;
    border-bottom: solid 1px #ccc;
    
}
.btn{
    box-sizing:border-box;
    border-top: solid 1px #ccc;
    border-left: solid 1px #ccc;
    width: 25%;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
}
.placeholder{
    display: inline;
    color: #999;
}
.btn:last-child{
    color:#fff;
    background: #50b77b;
}