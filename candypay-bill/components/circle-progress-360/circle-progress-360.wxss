.circle-wrap {
    overflow: hidden;
}
/* 底盘 */
.circle-bar {
    position: relative;
    border-radius: 50%;
}
/* 遮罩 */
.mask {
    background-color: #fff;
    text-align: center;
}
.circle-bar-top,
.mask {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    border-radius: 50%;
}
.mask .tit {
    margin-top: 26rpx;
    font-size: 28rpx;
    color: #999;
}
.mask .p{
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
}
.s .mask .tit {
    margin-top: 10rpx;
    font-size: 20rpx;
    color: #999;
    height: 30rpx;
}
.s .mask .p{
    font-size: 20rpx;
    font-weight: bold;
    color: #333;
}

/* 裁成半圆 */

.l {
    background-color: #ccc; /* 底色 */
    clip: rect(0, 80rpx, auto, auto);
}
.l-mask {
    clip: rect(0, 80rpx, auto, auto);
}
.r {
    clip: rect(0, auto, auto, 80rpx);
}

.s .l {
    background-color: #ccc; /* 底色 */
    clip: rect(0, 55rpx, auto, auto);
}
.s .l-mask {
    clip: rect(0, 55rpx, auto, auto);
}
.s .r {
    clip: rect(0, auto, auto, 55rpx);
}
